{
  "name": "@runt/lib-web",
  "version": "0.11.1",
  "description": "Web-compatible logging library for Runt applications",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/runtimed/anode.git"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2024"
    ],
    "types": [],
    "strict": true
  },
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/testing": "jsr:@std/testing@^1.0.14",
    "@livestore/livestore": "npm:@livestore/livestore@^0.3.1",
    "@livestore/sync-cf": "npm:@livestore/sync-cf@^0.3.1",
    "@livestore/common": "npm:@livestore/common@^0.3.1",
    "@livestore/adapter-web": "npm:@livestore/adapter-web@^0.3.1",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0"
  },
  "tasks": {
    "test": "deno test --allow-net --allow-env --allow-read --unstable-broadcast-channel",
    "test:unit": "deno test --allow-net --allow-env --allow-read --unstable-broadcast-channel src/",
    "test:watch": "deno test --allow-net --allow-env --allow-read --unstable-broadcast-channel --watch",
    "test:summary": "echo 'ðŸ§ª Running @runt/lib-web test suite...' && deno test --allow-net --allow-env --allow-read --unstable-broadcast-channel --reporter=pretty && echo 'âœ… All tests completed!'",
    "check": "deno check mod.ts src/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/test_*.ts"
    ]
  }
}
