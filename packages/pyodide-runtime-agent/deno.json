{
  "name": "@runt/pyodide-runtime-agent",
  "version": "0.2.3",
  "description": "Python runtime agent using Pyodide with IPython integration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/runtimed/anode.git"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./lib": "./src/lib.ts"
  },
  "bin": {
    "pyrunt": "--env-file=.env ./src/mod.ts"
  },
  "imports": {
    "@runt/lib": "jsr:@runt/lib@^0.2.3",
    "@runt/schema": "jsr:@runt/schema@^0.2.3",
    "npm:pyodide": "npm:pyodide@^0.27.7",
    "@std/async": "jsr:@std/async@^1.0.0",
    "npm:@livestore/livestore": "npm:@livestore/livestore@^0.3.1",
    "@openai/openai": "jsr:@openai/openai@^4.98.0",
    "npm:strip-ansi": "npm:strip-ansi@^7.1.0"
  },
  "tasks": {
    "dev": "deno run --allow-all --env-file=.env src/pyodide-agent.ts",
    "test": "deno test --allow-all --env-file=.env",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "publish": {
    "include": ["src/", "README.md"],
    "exclude": ["**/*.test.ts", "**/test_*.ts"]
  }
}
